shell -bash
activity ""
bell ""
vbell off
vbell_msg ""
defscrollback 10000
nonblock on
msgwait 2

startup_message off

bind k
bind ^k
bind K kill

bindkey -m "^B" eval "stuff ' '" writebuf "exec $HOME/.screen/openuri > /dev/null"

caption always "%{= kb}[ %{G}%H::$USER %{b}][ %=%{w}%?%-Lw%?%{b}(%{W}%n*%f %t%?(%u)%?%{b})%{w}%?%+Lw%?%?%= %{b}][%{B} %Y.%m.%d %{W}%0c %{b}]"
sorendition +b kG
